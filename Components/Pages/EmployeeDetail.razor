@page "/employeedetail/{EmployeeId:int}"
@rendermode InteractiveServer

<h3>EmployeeDetail for @EmployeeId</h3>


<section class="employee-detail">

    <h1 class="page-title">
        Details for @Employee.FirstName @Employee.LastName
    </h1>

    <br />

    <div class="col-12 row">
        <div class="col-2 text-center">
            <img src="@($"http://codewithz.in/training/blazor/images/{Employee.EmployeeId}.jpg")" class="img-fluid rounded-circle employee-detail-img" />
            @if (Employee.IsOnHoliday)
            {
                <div>
                    <span class="badge bg-warning text-wrap" style="width: 6rem;">
                        On Holiday
                    </span>
                </div>
            }
            else
            {
                <div>
                    <span class="badge bg-success text-wrap" style="width: 6rem;">
                        Working
                    </span>
                </div>
            }
            <div class="mt-2">
                <button type="button" class="btn btn-outline-success me-1" @onclick="@ChangeHolidayState">Change Holiday State</button>

            </div>
        </div> 
        <div class="col-10 row">
            <div class="col-12 col-xxl-8">


                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Employee ID</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Employee.EmployeeId</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">First Name</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Employee.FirstName</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Last Name</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Employee.LastName</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Birth Date</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Employee.BirthDate</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Employee.Email</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Street</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Employee.Street</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Zip</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Employee.Zip</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">City</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Employee.City</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Phone</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Employee.PhoneNumber</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Gender</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Employee.Gender</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Smoker</label>
                    <div class="col-sm-8">
                        @if( Employee.Smoker)
                        {
                            <label type="text" class="form-control-plaintext">Yes</label>
                        }
                        else
                        {
                            <label type="text" class="form-control-plaintext">No</label>
                        }

                    </div>
                </div>


                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Joined Us</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Employee.JoinedDate</label>
                    </div>
                </div>


                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Left Us</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Employee.ExitDate</label>
                    </div>
                </div>



            </div>
        </div>
    </div>
    
</section>